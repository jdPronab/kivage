#: import settings settings

<Kivage>:
    mainpreview: _main_preview
    AnchorLayout:
        anchor_x: 'left'
        anchor_y: 'top'
        MainPreview:
            id: _main_preview
            kivyimage: root
            size_hint: None, None
            height: root.height
            width: root.width - _tool_pane.width
    
    AnchorLayout:
        anchor_x: 'right'
        anchor_y: 'top'
        ToolPane:
            mainpreview: _main_preview
            kivyimage: root
            id: _tool_pane
            size_hint: None, None
            height: root.height
            width: 150
    
<LoadBialogButton@ToolButton>:
    size: 50, 30

<LoadDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        background_color: settings.Primary['green']
        FileChooserListView:
            id: filechooser
            rootpath: '/home/'
            filters: ['*.png', '*.jpg', '*.jpeg']

        StackLayout:
            orientation: 'rl-tb'
            size_hint_y: None
            height: 30
            padding: 10
            spacing: 20

            LoadBialogButton:
                text: "Load"
                on_release: root.load(filechooser.path, filechooser.selection)
            
            LoadBialogButton:
                text: "Cancel"
                on_release: root.cancel()

<SaveDialog>:
    text_input: _text_input
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filechooser
            on_selection: _text_input.text = self.selection and self.selection[0] or ''

        TextInput:
            id: _text_input
            size_hint_y: None
            height: 30
            multiline: False

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Save"
                on_release: root.save(filechooser.path, _text_input.text)