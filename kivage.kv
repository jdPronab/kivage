#: import settings settings

<Kivage>:
    mainpreview: _main_preview
    AnchorLayout:
        anchor_x: 'left'
        anchor_y: 'top'
        MainPreview:
            id: _main_preview
            kivyimage: root
            size_hint: None, None
            height: root.height
            width: root.width - _tool_pane.width
    
    AnchorLayout:
        anchor_x: 'right'
        anchor_y: 'top'
        ToolPane:
            mainpreview: _main_preview
            kivyimage: root
            id: _tool_pane
            size_hint: None, None
            height: root.height
            width: 150
    
<LoadBialogButton@ToolButton>:
    size: 50, 30

<LoadDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        background_color: settings.Primary['green']
        FileChooserListView:
            id: filechooser
            rootpath: '/home/'
            filters: ['*.png', '*.jpg', '*.jpeg']
            #color: settings.Primary['text_color']
            #background_color: settings.Primary['green']

        StackLayout:
            orientation: 'rl-tb'
            size_hint_y: None
            height: 30
            padding: 10
            spacing: 20

            LoadBialogButton:
                text: "Load"
                on_release: root.load(filechooser.path, filechooser.selection)
            
            LoadBialogButton:
                text: "Cancel"
                on_release: root.cancel()